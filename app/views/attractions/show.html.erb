<h1><%=@attraction.name%></h1>

<% if User.find(session[:user_id]).admin == true %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
    <%= form_for @ride do |f| %>
        <%= f.hidden_field :user_id, value: session[:user_id] %><br>
        <%= f.hidden_field :attraction_id, value: @attraction.id %><br>
        <%= f.submit "Go on this ride" %>
    <% end %>
<% end %>
